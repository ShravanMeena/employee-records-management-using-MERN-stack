        <br><br>

     
    <form class="form-inline" action="/update/" method="post" style="margin-left: 300px;">
      <input type="hidden" name="id" value="<%= records._id %>" />
        <div class="form-group">
            <label for="name">name:</label>
            <input type="name" class="form-control" id="name" placeholder="Enter name" name="name"
                value="<%= records.name %>">
        </div>
        <div class="form-group">
            <label for="email">Email:</label>
            <input type="email" class="form-control" id="email" placeholder="Enter email" name="email"
                value="<%= records.email%>">
        </div> <br><br><br>
        <div class="form-group">
            <select class="form-control" id="etype" name="etype">
                <option value="Hourly" <% if(records.etype == 'Hourly'){%> selected<% } %>>Hour</option>
                <option value="Fixed" <% if(records.etype == 'Fixed'){%> selected<% } %>>Fixed</option>
            </select>
        </div>
        <div class="form-group">
            <label for="hourlyrate">hourlyrate:</label>
            <input type="text" class="form-control" id="hourlyrate" placeholder="Enter hourlyrate" name="hourlyrate"
                value="<%= records.hourlyrate %>">
        </div> <br><br><br>
        <div class="form-group">
            <label for="totalhour">totalhour:</label>
            <input type="text" class="form-control" id="totalhour" placeholder="Enter totalhour" name="totalhour"
                value="<%= records.totalhour %>">
        </div>
        <br><br><br>
        <button type="submit" class="btn btn-default">Submit</button>
    </form>

