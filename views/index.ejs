<div class="container">
 <a class="btn btn-primary btn-lg" href="/"> <i class="fa fa-home"></i> </a>

  <h2><%= title %></h2>
<br><br>
<% if(success != '') { %>

<div class="alert alert-success">
  <strong>Success!</strong> <%= success %>
</div>
<% } %>

  <form class="form-inline" action="/search/" method="post">
    <div class="form-group">
      <label for="name">By Name:</label>
      <input type="text" class="form-control" id="name" placeholder="Enter name" name="filtername">
    </div>
    <div class="form-group">
      <label for="email">By Email::</label>
      <input type="text" class="form-control" id="email" placeholder="Enter email" name="filteremail">
    </div>
    <div class="form-group">
      <select class="form-control" id="etype" name="filteretype">
        <option>Hour</option>
        <option>Fixed</option>
      </select>
  </div>
</div>
    </div>
    <button style="margin-left: 700px; margin-top:-50px" type="submit" class="btn btn-default">Search..</button>
  </form>
<br>  
<br><br>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>etype</th>
        <th>hourrately</th>
        <th>hourtotal</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% if (records.length > 0) { %>
      <% records.forEach(function(row){ %>
      <tr>
        <td><%= row.name %></td>
        <td><%= row.email %></td>
        <td><%= row.etype %></td>
        <td><%= row.hourlyrate %></td>
        <td><%= row.totalhour %></td>
        <td> 
          <a class="btn btn-primary btn-xs" href="/edit/<%=row._id %>"> <i class="fa fa-edit"></i> </a>  
          <a class="btn btn-danger btn-xs" href="/delete/<%=row._id %>"> <i class="fa fa-trash"></i> </a>  
          
        </td>
      </tr>
      <% })} else{ %>
        <tr>
          <td colspan="6"> No record found </td>
        </tr>
        <% }%>
    </tbody>
  </table>
</div>

<form class="form-inline" action="/" method="post" style="margin-top:70px;">
  <div class="form-group">
    <label for="name">name:</label>
    <input type="name" class="form-control" id="name" placeholder="Enter name" name="name">
  </div>
  <div class="form-group">
    <label for="email">Email:</label>
    <input type="email" class="form-control" id="email" placeholder="Enter email" name="email">
  </div> 
  <div class="form-group">
    <select class="form-control" id="etype" name="etype">
      <option>Hour</option>
      <option>Fixed</option>
    </select>
  </div>
  <div class="form-group">
    <label for="hourlyrate">hourlyrate:</label>
    <input type="text" class="form-control" id="hourlyrate" placeholder="Enter hourlyrate" name="hourlyrate">
  </div> 
  <div class="form-group">
    <label for="totalhour">totalhour:</label>
    <input type="text" class="form-control" id="totalhour" placeholder="Enter totalhour" name="totalhour">
  </div>
  <button type="submit" class="btn btn-default">Add Record</button>
</form>

